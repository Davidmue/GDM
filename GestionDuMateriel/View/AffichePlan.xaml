<Window x:Name="AffichagePlan" x:Class="GestionDuMateriel.View.AffichePlan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionDuMateriel.View"
        mc:Ignorable="d"
        Title="{Binding DescriptionImagePlan}" Height="250" Width="288" Activated="Window_Activated" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Label Content="Zoom" />
            <Button Name="btnZoomIn" Content="+" Width="20" Click="btnZoomIn_Click" />
            <Button Name="btnZoomOut" Content="-" Width="20" Click="btnZoomOut_Click" />
            <Image Name="FichierImagePlanInvisible" Visibility="Collapsed" Source="{Binding CheminCompletImagePlan}" Width="Auto" Height="Auto" />
        </StackPanel>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="4">
            <Image Name="FichierImagePlan"  Source="{Binding CheminCompletImagePlan}" Width="100" Height="100" />
        </ScrollViewer>
    </Grid>
</Window>
